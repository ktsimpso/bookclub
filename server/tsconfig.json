{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "target": "es2019",
        "module": "commonjs",
        "outDir": "./dist/",
        "baseUrl": "./source",
        "moduleResolution": "node",
        "paths": {
            "@shared/*": [
                "../../shared/@shared/*"
            ],
            "@env/*": [
                "../../shared/@env/*"
            ]
        }
    },
    "include": [
        "./source/**/*"
    ]
}